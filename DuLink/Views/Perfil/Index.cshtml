@model DuLink.Entities.Jobs
@{
    ViewBag.Title = "Perfil";
}

<div class="container-fluid row pt-4">
    <div class="col-lg-3 col-md-5 col-sm-12 text-center">

        <!--Perfil información-->
        <div class="row justify-content-center rounded" style="background-color:white;border:1px solid #ccc">

            <div class="col-12 mt-1">
                <div class="img-thumbnail" style="overflow:hidden">
                    <h3 class="card-title">@ViewBag.Profile.UserName</h3>
                    <img src="~/Content/Perfil.png" alt="Imagen del perfil" style="max-height:240px;min-height:230px" />
                    @if (ViewBag.isFriend == false)
                    {
                        <a href="@Url.Action("addFriend", "Perfil", new { username = ViewBag.Profile.UserName })" class="btn btn-primary">
                           Follow
                        </a>
                    }
                </div>
            </div>

            <div class="my-2">
                <h5>Information</h5>
            </div>

            <div class="col-12">
                <hr class="my-0" />
            </div>

            <div class="mt-2 col-12">
                <div class="py-2 my-1 trabajoPlantilla">
                    <span class="text-muted mr-2">Name:</span>
                    <span id="name">@ViewBag.Profile.Name</span>
                </div>
                <div class="py-2 my-1 trabajoPlantilla">
                    <span class="text-muted mr-2">Last Name:</span>
                    <span id="lastName">@ViewBag.Profile.LastName</span>
                </div>
                <div class="py-2 my-1 trabajoPlantilla">
                    <span class="text-muted mr-2">Email:</span>
                    <span id="email">@ViewBag.Profile.Mail</span>
                </div>
                <div class="py-2 my-1 trabajoPlantilla">
                    <span class="text-muted mr-2">Career:</span>
                    <span id="carrer">@ViewBag.Profile.Career</span>
                </div>
                <div class="py-2 my-1 trabajoPlantilla">
                    <span class="text-muted mr-2">Semester:</span>
                    <span id="semester">@ViewBag.Profile.Semester</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-7 col-sm-12">
        <div class="row">
            <!-- Job information-->
            <div class="container">

                
                @if (ViewBag.ProfileID == Session["ID"].ToString())
                {   <div class="col-12 my-2">
                        <h5>Add a new job</h5>
                    </div>
                    <div class="col-12">
                        <hr class="my-0" />
                    </div>
                    <div class="col-12 my-3 border rounded" style="background-color:white">
                        <form action="/Perfil/AddJob" method="post" class="form-group row">
                            @Html.AntiForgeryToken()
                            <div class="col-md-6">
                                <label class="small">Company</label>
                                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control py-1" } })
                                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="small">Charge</label>
                                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control py-1" } })
                                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="small">Since</label>
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control py-1" } })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="small">Until</label>
                                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control py-1" } })
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-12 my-2 py-1 px-3">
                                <button class="btn btn-outline-dark" type="submit">Add</button>
                            </div>
                        </form>
                    </div>
                }
                @if (ViewBag.JobCount != 0)
                {
                    <div class="col-12">
                        <h5>Jobs History</h5>
                    </div>
                    <div class="col-12">
                        <hr class="my-0" />
                    </div>
                    <div class="col-12">
                        <!--Job records-->
                        @foreach (var job in ViewBag.Jobs)
                        {
                            <div class="my-3 trabajoPlantilla">
                                <div class="ml-2">
                                    <span class="h4">@job.CompanyName</span>
                                    <p>@job.Position</p>
                                    <span class="text-muted">Since:</span><span class="small">@job.StartDate</span>
                                    @if (job.EndDate != null)
                                    {
                                        <span class="text-muted ml-4">Until:</span><span class="small">@job.EndDate</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted ml-4">Until:</span><span class="small">Currently</span>
                                    }
                                </div>
                            </div>
                        }

                    </div>
                }
                else
                {
                    <div class="col-12">
                        <h6>There is not Jobs added</h6>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-12">
        <div class="col-12 row contactos container">
            <!-- Job information-->
            <div class="col-12">
                <h5>Friends list</h5>
            </div>
            <div class="col-12">
                <hr class="my-0" />
            </div>

            @if (ViewBag.FriendsCount != 0)
            {
                foreach (var friend in ViewBag.FriendsList)
                {
                    <a href="@Url.Action("Index", "Perfil", new { userID = friend.Id })" class="col-12 my-1 contacto">
                        <img src="~/Content/Perfil.png" alt="Alternate Text" style="width:50px;height:50px;border-radius:100%" />
                        <span>@friend.Name</span>
                    </a>
                }
            }
            else
            {
                <h6 class="card-title">No friends to display</h6>
            }
        </div>
    </div>
</div>
